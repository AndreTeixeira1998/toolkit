#! /usr/bin/env bash

set -euo pipefail

function set_up_config_files() {
    echo "Copying config files"
    cp ./examples/*.yml ./config/
    cp ./examples/overleaf.rc ./config/
    cp ./examples/variables.env ./config/
}

function __main__() {
    # TODO:
    # - check if the user wants to overwrite existing config
    set_up_config_files
}

__main__ "$@"
